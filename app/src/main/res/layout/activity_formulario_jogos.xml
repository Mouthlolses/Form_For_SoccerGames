<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FormularioJogosActivity">

        <EditText
            android:id="@+id/activity_formulario_jogo_nomeDoOrganizador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="48dp"
            android:hint="Nome do Organizador"
            android:fontFamily="monospace"
            android:inputType="text"
            android:textColorHint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_formulario_jogo_numeroParaContato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Número Para Contato"
            android:fontFamily="monospace"
            android:textColorHint="#FF5722"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_formulario_jogo_nomeDoOrganizador" />

        <EditText
            android:id="@+id/activity_formulario_jogo_diaDojogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Data do Jogo"
            android:inputType="text"
            android:fontFamily="monospace"
            android:textColorHint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_formulario_jogo_numeroParaContato" />

        <EditText
            android:id="@+id/activity_formulario_jogo_horarioDoInicioDoJogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Hórario de Início do Jogo"
            android:inputType="time"
            android:fontFamily="monospace"
            android:textColorHint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_formulario_jogo_diaDojogo"/>

        <EditText
            android:id="@+id/acitivity_formulario_jogo_horarioDeFimDoJogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Hórario de Término do Jogo"
            android:inputType="time"
            android:fontFamily="monospace"
            android:textColorHint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_formulario_jogo_horarioDoInicioDoJogo" />

        <EditText
            android:id="@+id/activity_formulario_jogo_valorAPagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="monospace"
            android:hint="@string/valorAPaga"
            android:inputType="numberDecimal"
            android:textColorHint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acitivity_formulario_jogo_horarioDeFimDoJogo" />

        <Button
            android:id="@+id/activity_formulario_jogo_botaoSalvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_formulario_jogo_valorAPagar"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>